/* Layout */

@import "nib"

header {
  .logo {
    margin-top: -100px
    margin-left: 20px
  }

  .icon {
    position: absolute
    top: 60px

    &.twitter {
      right: 70px
    }

    &.youtube {
      right: 35px
    }
  }

  .language {
    position: absolute
    top: 24px
    right: 10px
  }

  nav {
    background: #D4D4D4
    white-space: nowrap
    padding = 30px
    height: 100px - padding
    padding-top: padding
    padding-left: 30px
    a {
      display: inline-block
      width: 167px
      color: #353535 !important
      &:first-child {
        width: 100px
      }
      small {
        display: block
        margin-top: -16px
        font-size: 10px
      }
    }
  }
}

footer {
  margin-top: 30px
  height: 50px
  background-color: #545454
}

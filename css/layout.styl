/* Layout */

@import "nib"

header {
  .logo {
    margin-top: -100px
    margin-left: 20px
  }

  .icon {
    position: absolute
    top: 60px

    &.twitter {
      right: 70px
    }

    &.youtube {
      right: 35px
    }
  }

  .language {
    absolute: top 0px left 830px
    font-size: 13px
  }

  a {
    color: #353535 !important
    text-decoration: none
  }

  nav {
    background: #D4D4D4
    white-space: nowrap
    padding = 25px
    height: 100px - padding
    padding-top: padding
    padding-left: 30px
    a {
      display: inline-block
      width: 144px
      &:first-child {
        width: 70px
        relative: top 10px left 0
      }
      &.active {
        color: #CE0400 !important
      }
      small {
        display: block
        margin-top: -16px
        font-size: 10px
        line-height: inherit
      }
    }
  }
}

footer {
  margin-top: 30px
  padding-left: 50px
  height: 50px
  line-height: @height
  background-color: #545454
  a:link, a:visited {
    font-size: 80%
    color: white
    text-decoration: none
  }
}

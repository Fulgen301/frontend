/* Layout */

@import "nib"
@import "lib/variables"

header {
  .topimg, nav > div {
    width: mainWidth
    margin-left: auto
    margin-right: auto
    position: relative
  }

  .topimg {
    margin-bottom: -12px
  }

  .logo {
    absolute: top 27px left 20px
  }

  .icon {
    position: absolute
    top: 60px

    &.twitter {
      right: 70px
    }

    &.youtube {
      right: 30px
    }
  }

  .language {
    absolute: top 0px left 830px
    font-size: 13px
  }

  a:link, a:visited {
    color: #353535
    text-decoration: none
  }

  nav {
    padding = 14px
    height: 89px - padding
    padding-top: padding

    background: #D4D4D4
    border-top: 2px solid #696969

    white-space: nowrap

    > div {
      box-sizing: border-box
      padding-left: 30px
    }

    a {
      display: inline-block
      width: 144px
      &:first-child {
        width: 70px
        relative: top 10px left 0
      }
      &.active {
        color: csRed !important
      }
      b {
        font-family: "Arial black", Arial, sans-serif
        font-size: 16px
      }
      small {
        display: block
        margin-top: -16px
        font-size: 10px
        line-height: inherit
      }
    }
    a:hover {
      color: #ce0400
    }
    
  }

  .twitch {
    background-color: csRed
    font-weight: bold
    text-align: center
    display: none

    a:link, a:visited {
      color: white
    }
  }
}

footer {
  margin-top: 30px
  padding-left: 50px
  height: 50px
  line-height: @height
  background-color: #545454
  a:link, a:visited {
    font-size: 80%
    color: #cecece
    text-decoration: none
  }
  a:hover {
    color: white
  }
}



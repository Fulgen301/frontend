#games {
  .game-list {
    a {
      height: 112px
      display: flex
    }

    img {
      width: 150px
    }

    .game-info {
      padding-left: 16px
    }

    h2, p {
      margin: 0.5em 0
    }

    p {
      line-height: 18px
    }

    .running {
      opacity: 0.7

      &:not(.lzb) {
        cursor: not-allowed
      }
    }

    .fa-lock {
      display: none
    }
    .pw .fa-lock {
      display: inline-block
      margin-left: 0.5em
    }
  }
}

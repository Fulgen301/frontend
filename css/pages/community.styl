/* Community */

@import "nib"

.content {
  position: relative
}

.imgborder {
  /*border: 1px solid grey;*/
}


#quota {
  width: 306px
  relative: top 0px
  background-color: #dddddd
  border: dashed 1px silver
  /*border-top-left-radius: 10px
  border-bottom-left-radius: 10px*/
  border-radius: 10px
  padding-top 0px
  padding-left: 30px
  padding-right: 30px
  padding-bottom: 15px
}

#projects {
    position: relative
    margin-top: 30px
}

.bigprojectcontainer {
  width: 384px
  height: 384px
  background: black
  position: relative
}

.smallprojectcontainer1 {
  width: 260px
  height: 182px
  absolute: top 42px left 406px
  background-color: green
}

.smallprojectcontainer2 {
  width: 260px
  height: 182px
  absolute: top 242px left 406px
  background-color: blue
}

.smallprojectcontainer3 {
  width: 260px
  height: 182px
  absolute: top 42px left 684px
  background-color: blue
}

.smallprojectcontainer4 {
  width: 260px
  height: 182px
  absolute: top 242px left 684px
  background-color: blue
}

.bigprojectimg {
  width: 100%
}

#overlaybig {
    position: absolute
    top: 0
    left: 0
    height: 384px
    width: 384px
    opacity: 0
    display: table
}

#overlaybig:hover {
    background: #ce0400
    opacity: 1
    color: white
    transition: 0.1s
}

#overlay {
    position: absolute
    top: 0
    left: 0
    width: 260px
    height: 180px
    opacity: 0
    display: table
}

#overlay:hover {
    background: #ce0400
    opacity: 1
    color: white
    transition: 0.1s
}

#row {
    display: table-row
    vertical-align: middle
}

#cell {
  
    display: table-cell
    vertical-align: middle
    padding: 10px
    a:link, a:visited {
      color: white
    }
    a:hover {
        text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.8);
    }
}

#cellbig {
    display: table-cell
    vertical-align: middle
    padding: 30px
}

#Spotlight {
  absolute: top 0px left 430px
}

#externalLinks {
  relative: top 1020px left 384px
}

ul {
  padding 0px
  margin 0px
  width: 100px
}

li {
  padding-left: 0px
  display: inline
}

#externalLinks{
  a:link, a:visited {
    display: block
    font-weight: bold
    color: black
    background-color: rgba(200, 200, 200, 0.5)
    width: 274px
    text-align: center
    padding: 14px
    text-decoration:none
    margin-bottom: -2px
  }  
  a:hover, a:active {
  transition:.2s;
  background-color: #434343
  }
}
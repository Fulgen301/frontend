/* Community */

@import "nib"

#community {

  position: relative

  #quota {
    relative: top 0px
    background-image: url(../images/community/combg.jpg)
    background-repeat: no-repeat; 
    // Make sure that the dimensions below match the background image.
    box-sizing: border-box
    width: 1006px
    height: 363px
    padding-top 30px
    padding-left: 30px
    padding-right: 30px
    padding-bottom: 15px
  }

  #quotatext {
    color: #0F1B4B
    text-shadow: 0 0 5px white
    absolute: top 2px
    width: 480px
    z-index: 3
  }

  #imgcommunity {
    absolute: top 20px left 610px
    animation:spin 550s linear infinite;
    z-index: 2
  }

  #combg {
    absolute: top 0px left 0px
    z-index: 1
  }

  #projects {
      /*img {border: 1px solid #101010}*/
      position: relative
      margin-top: 30px
  }

  .bigprojectcontainer {
    width: 384px
    height: 384px
    background: black
    position: relative
  }

  .smallprojectcontainer1 {
    width: 260px
    height: 182px
    absolute: top 82px left 406px
  }

  .smallprojectcontainer2 {
    width: 260px
    height: 182px
    absolute: top 282px left 406px
  }

  .smallprojectcontainer3 {
    width: 260px
    height: 182px
    absolute: top 82px left 684px
  }

  .smallprojectcontainer4 {
    width: 260px
    height: 182px
    absolute: top 282px left 684px
  }

  .bigprojectimg {
    width: 100%
  }

  #overlaybig {
      position: absolute
      top: 0
      left: 0
      height: 384px
      width: 384px
      opacity: 0
      display: table
  }

  #overlaybig:hover {
      background: #ce0400
      opacity: 1
      color: white
      transition: 0.5s
  }

  #overlay {
      position: absolute
      top: 0
      left: 0
      width: 260px
      height: 182px
      opacity: 0
      display: table
      transition: 0.5s
  }

  #overlay:hover {
      background: #ce0400
      opacity: 1
      color: white
      transition: 0.1s
  }

  #row {
      display: table-row
      vertical-align: middle
  }

  #cell {
      display: table-cell
      vertical-align: middle
      padding: 15px
  }

  #cellbig {
      display: table-cell
      vertical-align: middle
      padding: 30px
  }

  #Timeline {
    margin-top: 50px
    position: relative
  }

  #Spotlight {
    margin-top: 40px
    position: relative
  }

  #externalLinks {
    absolute: left 684px top -16px

    a:link, a:visited {
      display: block
      font-weight: bold
      color: black
      background-color: rgba(200, 200, 200, 0.5)
      width: 214px
      text-align: center
      padding-left: 24px
      padding-right: 24px
      padding-top: 25px
      padding-bottom: 25px

      text-decoration:none
      margin-bottom: -2px
    }  

    a:hover, a:active {
      transition:.2s;
      background-color: #434343
      border-bottom: 0px
    }

    ul {
      padding 0px
      margin 0px
      width: 100px
    }

    li {
      padding-left: 0px
      display: inline
    }
  }

}

.aWebsite, .aWebsite_alone, .aMiniblog, .aMiniblog_alone {
  font-weight: bold
  background-color: white
  padding: 6px 15px
  color: white
  display: inline-block
  box-shadow: 0px 2px 0px 0px rgba(145, 0, 0, 1);
}

.aWebsite {
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
}

.aMiniblog {
  margin-left: 2px

  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
}

.aMiniblog_alone, .aWebsite_alone {
  border-radius: 3px;
}

@keyframes spin { 100% { transform:rotate(360deg); } }


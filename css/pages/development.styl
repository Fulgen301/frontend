#Sidebar {
  padding-left: 0px
  padding-right: 15px
  margin-left: 25px
  width: 250px
  background-color: #E9DDD1
  border-style: solid
  border-width: 12px 12px 12px 12px 
  border-image: url(../images/dev/border.png) 12 12 12 12 fill repeat

  background-image: url(../images/dev/sidebartex.jpg)
  background-repeat: no-repeat;
  background-position: 0 100%;


  li {
    margin: 0px
  }

  ul, li { 
    list-style: none
    padding: 0px
  }

  h6 {
    text-shadow: 0px 0px 5px white
  }

  p {
    padding-left: 15px
  }
}

.buttonsidebar {
  display: inline-block
  margin: 5px
  padding: 6px 20px
  text-align: center
  border-radius: 5px
  box-shadow: 0px -1px 0px 0px #49322a, 0px 2px 0px 0px #f5f1ec
  background-color: #916453
  z-index: 2

  a:link, a:visited, a:active {
    text-transform: uppercase
    font-size: 12px
    font-weight: 700
    color: white
    text-shadow: 1px 1px 1px #20130e;
    border-bottom: 0px
  }

  &:hover {
    background-color: #87d969
    box-shadow: 0px -2px 0px 0px #f5f1ec, 0px 1px 0px 0px #49322a
    transition: all 0.2s ease-out
    -webkit-transition: all 0.2s ease-out
  }
}


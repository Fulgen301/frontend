/* Home page */

@import "nib"
@import "../lib/variables"

#home {
  position: relative
  margin: 0
  padding: 0

  sliderWidth = 620px
  sliderHeight = 388px
  #sliderarea {
    width: sliderWidth
    height: sliderHeight
    background-color: #3A3A3A

    #layerslider {
      width: sliderWidth
      height: sliderHeight
    }

    p {
      background-color: white
      font-weight: bold
      font-size: 17px
      padding: 5px 10px
      white-space: nowrap
    }
  }

  // Prevents flash of uninterpolated templates.
  [ng-cloak] {
    display: none
  }

  .news-admin {
    label {
      color: white
      display: block
      font-weight: bold
    }
  }

  .newsfeed {
    absolute: top 0 right 0
    width: mainWidth - sliderWidth
    height: sliderHeight
    background-color: #3A3A3A
    a {
      display: block
      box-sizing: border-box
      width: 100%
      height: (@height / 4)
      color: white !important
      text-decoration: none !important
      background-image: url(/images/stream_iconarea.png)
      background-repeat: no-repeat
      background-position: 100% 0
      border-bottom: 6px solid csRed
      &:hover {
        background-image: none
        background-color: csRed
      }

      img {
        float: right
        margin-right: 10px
        margin-top: 16px
      }
      div {
        relative: top 16px left 15px
        > * {
          display: block
        }
      }
      b {
        font-size: 20px
      }
    }
  }

  bottomHeight = 300px

  .download {
    height: bottomHeight
    padding-left: 50px

    > h2 {
      margin-bottom: 0
    }
    > p {
      margin-top: 0
      margin-bottom: 0.5em
    }
    .buttons {
      a {
        display: block
        float: left
        width: 140px
        height: @width

        background-color: white
        box-shadow: 0px 1px 5px rgba(55, 26, 26, 1)

        color: #212121
        text-decoration: none
        text-align: center
        line-height: 20px

        img {
          margin-top: 15px
        }

        strong {
          display: block
        }

        p {
          margin: 0
          font-size: 80%
          font-style: italic
        }
      }

      a + a {
        margin-left: 20px
      }

      .cr img {
        // Adjust for different image height.
        margin-bottom: 5px
      }

      &:after {
        clear: both
        content: ' '
        display: table
      }
    }
  }

  .clonk {
    absolute: left 400px bottom 30px
  }

  .screenshots {
    width: 380px
    height: bottomHeight + 6px
    absolute: right 0 bottom 10px

    ul {
      list-style-type: none
      padding-left: 0
      width: 350px
    }

    li {
      display: inline-block
      width: 97px
      height: 58px
      overflow: hidden
      border: 4px solid #212121
    }

    img {
      position: relative
    }
  }
}

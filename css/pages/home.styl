/* Home page */

@import "nib"
@import "../lib/variables"

#home {
  position: relative
  margin: 0
  padding: 0

  sliderWidth = 620px
  sliderHeight = 388px
  #sliderarea {
    width: sliderWidth
    height: sliderHeight
    background-color: #3A3A3A

    #layerslider {
      width: sliderWidth
      height: sliderHeight
    }

    p {
      background-color: white
      font-weight: bold
      font-size: 17px
      padding: 5px 10px
      white-space: nowrap
    }
  }

  // Prevents flash of uninterpolated templates.
  [ng-cloak] {
    display: none !important
  }

  .news-admin {
    position: relative
    color: white

    label {
      display: block
      font-weight: bold
    }

    .import {
      absolute: top 0 right 0
      width: (sliderWidth / 2px)
      height: sliderHeight
      overflow: auto

      ul {
        margin: 0
        padding-left: 20px
      }
      li {
        cursor: pointer
      }
    }
  }

  .newsfeed {
    absolute: top 0 right 0
    width: mainWidth - sliderWidth
    height: sliderHeight
    a {
      height: (@height / 4)
      background-image: url(/images/stream_iconarea.png)
      background-repeat: no-repeat
      background-position: 100% 0

      &:hover {
        background-image: none
      }

      img {
        float: right
        margin-right: 10px
        margin-top: 16px
      }
      div {
        relative: top 16px left 15px
        > * {
          display: block
        }
      }
      b {
        font-size: 20px
      }
    }
  }

  bottomHeight = 300px

  .download {
    height: bottomHeight
    padding-left: 50px

    > h2 {
      margin-bottom: 0
    }
    > p {
      margin-top: 0
      margin-bottom: 0.5em
    }
    .buttons {
      a {
        display: block
        width: 300px
        height: 70px

        background-color: white
        box-shadow: 0px 1px 2px rgba(55, 26, 26, 1)

        color: #212121
        text-decoration: none
        text-align: center
        line-height: 20px

        vertical-center() {
          position: relative
          top: 50%
          transform: translateY(-50%)
        }

        img {
          margin-left: 5px
          width: 60px
          float: left
          position: relative
          top: 50%
          vertical-center()
        }

        p {
          margin: auto
          vertical-center()

          span {
            font-size: 80%
            font-style: italic
          }

          strong {
            display: block
          }
        }
      }

      a:hover {
          background-color: #ce0400
          color: white
      }
    }
  }

  .clonk {
    absolute: left 400px bottom 30px
  }

  .screenshots {
    width: 380px
    height: bottomHeight + 6px
    absolute: right 0 bottom 10px

    ul {
      list-style-type: none
      padding-left: 0
      width: 350px
    }

    li {
      display: inline-block
      width: 97px
      height: 58px
      overflow: hidden
      border: 4px solid #212121
    }

    img {
      position: relative
    }
  }
}

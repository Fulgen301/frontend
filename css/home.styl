/* Home page */

@import "nib"
@import "lib/variables"

#home {
  position: relative
  margin: 0
  padding: 0

  sliderWidth = 620px
  sliderHeight = 388px
  #layerslider {
    width: sliderWidth
    height: sliderHeight

    p {
      background-color: white
      font-weight: bold
      font-size: 17px
      padding: 5px 10px
      white-space: nowrap
    }
  }

  .newsfeed {
    absolute: top 0 right 0
    width: mainWidth - sliderWidth
    height: sliderHeight
    a {
      red = #CF0401
      display: block
      box-sizing: border-box
      width: 100%
      height: (@height / 4)
      color: white !important
      text-decoration: none !important
      background-color: #3A3A3A
      background-image: url(/images/stream_iconarea.png)
      background-repeat: no-repeat
      background-position: 100% 0
      border-bottom: 6px solid red
      &:hover {
        background-image: none
        background-color: red
      }

      img {
        float: right
        margin-right: 10px
        margin-top: 16px
      }
      div {
        relative: top 16px left 15px
        > * {
          display: block
        }
      }
      b {
        font-size: 20px
      }
    }
  }

  .download {
    > h2 {
      margin-bottom: 0
    }
    > p {
      margin-top: 0
      margin-bottom: 0.5em
    }
    .buttons {
      a {
        display: block
        float: left
        width: 140px
        height: @width

        background-color: white
        box-shadow: 0px 1px 5px rgba(55, 26, 26, 1)

        text-decoration: none
        text-align: center
        line-height: 20px

        img {
          margin-top: 15px
        }

        strong {
          display: block
        }

        p {
          margin: 0
          font-size: 80%
          font-style: italic
        }
      }

      a + a {
        margin-left: 20px
      }

      .cr img {
        // Adjust for different image height.
        margin-bottom: 5px
      }

      &:after {
        clear: both
        content: ' '
        display: table
      }
    }
  }
}
